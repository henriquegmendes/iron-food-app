<h2>Add new restaurant</h2>
<form action="/new-restaurant" method="POST" enctype="multipart/form-data">
  <label for="">Name:</label>
  <input type="text" name="name"><br>

  <label for="class-input"> Type: </label><br>
  <input type="checkbox" id="class-input" name="type" value="Cafeteria">Cafeteria<br>
  <input type="checkbox" id="class-input" name="type" value="Fast Food">Fast Food<br>
  <input type="checkbox" id="class-input" name="type" value="Bar">Bar<br>
  <input type="checkbox" id="class-input" name="type" value="Asiática">Asiática<br>
  <input type="checkbox" id="class-input" name="type" value="Pizza">Pizza<br>
  <input type="checkbox" id="class-input" name="type" value="Hamburgueria">Hamburgueria<br>
  <input type="checkbox" id="class-input" name="type" value="Self Service">Self Service<br>
  <input type="checkbox" id="class-input" name="type" value="Vegetariana">Vegetariana<br>
  <input type="checkbox" id="class-input" name="type" value="Açaí">Açaí<br>
  <input type="checkbox" id="class-input" name="type" value="Doces">Doces<br>

  <label for="class-input"> Preço mínimo: </label><br>
  <select name="min">
    <option value="10">10 reais</option>
    <option value="20">20 reais</option>
    <option value="30">30 reais</option>
    <option value="40">40 reais</option>
  </select>

  <label for="class-input"> Preço máximo: </label><br>
  <select name="max">
    <option value="30">30 reais</option>
    <option value="40">40 reais</option>
    <option value="50">50 reais</option>
    <option value="51">+ de 50 reais</option>
  </select>

  <label for="">Description:</label>
  <input type="text" name="description">

  <label for="">Address:</label>
  <input type="text" name="address">

  <label for="">Picture:</label>
  <input type="file" name="photo">

  <label for="">Location:</label>
  <input type="text" name="latitude" placeholder="Latitude">

  <input type="text" name="longitude" placeholder="Longitude">

  <button type="submit">ADD</button>
</form>
