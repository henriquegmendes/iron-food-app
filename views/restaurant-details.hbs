

<div class="container-fluid content">
	{{!-- <h2>{{restaurant.name}}</h2> --}}
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-6">
					<div class="card bg-light mb-3" style="max-width: 100%;">
						<div class="card-header">{{restaurant.type}}</div>
						<div class="card-body">
							<h5 class="card-title">{{restaurant.name}}</h5>
							<p class="card-text">{{restaurant.description}}</p>
						</div>
						<div class="card-header">
							<p>Address: {{restaurant.address}}</p>
						</div>
					</div>
				<button type="button" class="btn btn-light"><a href="/addcomment/{{restaurant.id}}">Add comment</a></button>
				</div>
				<div class="col-md-6">
					<img width="90%" src="{{ restaurant.imgPath }}" alt="{{ restaurant.originalName }}" />
				</div>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-6">
				<h1>Comments:</h1>
			{{#each comment}}
			<div class="card">
				<h5 class="card-header">
					{{this.title}}
				</h5>
				<div class="card-body">
					<p class="card-text">
						{{this.content}}
					</p>
				</div>
				<div class="card-footer">
					Card footer
				</div>
			</div>
			{{/each}}


				</div>
				<div class="col-md-6">
					<div id="map"></div>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript" src="/javascripts/maps.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCNZEVA0U6Hw9-04kOy2ovaOe-89tD284M&callback=initOne">
  </script>