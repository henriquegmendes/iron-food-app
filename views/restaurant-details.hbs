<div class="container-fluid content rest-page">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-6">
          <div class="card bg-light mb-3" style="max-width: 100%;">
            <div class="card-header">{{restaurant.type}}</div>
            <div class="card-body">
              <h5 class="card-title text-uppercase">{{restaurant.name}}</h5>
              <p class="card-text">{{restaurant.description}}</p>
            </div>
            <div class="card-header">
              <p>Address: {{restaurant.address}}</p>
            </div>
          </div>
          <div>
            <h1>COMMENTS   <a class="btn btn-primary text-uppercase" href="/addcomment/{{restaurant.id}}">Add comment</a></h1>
          </div>
          {{#each comment}}
          <div class="card my-card">
            <h5 class="card-header">
              {{this.title}}
            </h5>
            <div class="card-body">
              <p class="card-text">
                {{this.content}}
              </p>
            </div>
          </div>
          {{/each}}
        </div>
        <div class="col-md-6">
          <div class="row"><img class="mx-auto img-fluid" style="max-width=100%" src="{{ restaurant.imgPath }}" alt="{{ restaurant.originalName }}" /></div>
          <div class="row">
            <div class="page-map" id="map"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="/javascripts/maps.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCNZEVA0U6Hw9-04kOy2ovaOe-89tD284M&callback=initOne"></script>