    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top mainNav js-scroll-trigger" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="/">IronFood</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav text-uppercase ml-auto">
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/restaurants">RESTAURANTS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/my-profile">PROFILE</a>
            </li>
            {{#if isUserLoggedIn}}
            <li class="nav-item">
              <a class="nav-link" href="/logout">LOGOUT</a>
            </li>
            {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/login">LOGIN</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="/signup">SIGN UP</a>
            </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
