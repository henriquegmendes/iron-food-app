<div class="container-fluid content">
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-2">
				</div>
				<div class="col-md-8">
          <h2> SIGN UP </h2>
          <form action="/signup" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name-input"> NAME </label>
              <input class="form-control" type="text" name="name" id="name-input"
                placeholder="e.g., Diana Prince">
            </div>
            <div class="form-group">
              <label for="email-input"> E-MAIL </label>
              <input class="form-control" type="email" name="email" id="email-input"
                placeholder="e.g., diana@themyscira.agency">
            </div>
            <div class="form-group">
              <label for="password-input"> PASSWORD </label>
              <input class="form-control" type="password" name="password" id="password-input"
                placeholder="e.g., ••••••••••••">
            </div>
              <div class="form-group">
                <div class="custom-file">
                  <input type="file" name="photo" class="custom-file-input">
                  <label class="custom-file-label">YOUR PHOTO</label>
                </div>
              </div>
            <button type="submit" class="btn btn-primary text-uppercase">SUBMIT</button>
          </form>
          <p class="login-text">
            Already have an account?
            <a href="/login">
              Log in.
            </a>
          </p>
				</div>
				<div class="col-md-2">
				</div>
			</div>
		</div>
	</div>
</div>



