<div class="content">
  <h2>Edit restaurant</h2>
<form action="/edit?restaurantId={{restaurant.id}}" method="POST">

  <label for="">Name:</label>
  <input type="text" name="name" value="{{restaurant.name}}">

  <label for="">Type:</label>
  <input type="text" name="type" value="{{restaurant.type}}">

  <label for="">Description:</label>
  <input type="text" name="description" value="{{restaurant.description}}">

  <label for="">Address:</label>
  <input type="text" name="address" value="{{restaurant.address}}">

  <button type="submit">EDIT</button>
</form>
</div>