<div class="content">
  <div class="container-fluid">
	<div class="row">
		<div class="col-md-6">
      <div class="card bg-light mb-3" style="max-width: 100%;">
        <div class="card-header"><h3>{{user.name}}</h3></div>
        <div class="card-body">
          {{!-- <h5 class="card-title">{{user.name}}</h5> --}}
          <img style="max-width: 30%;" src="{{user.imgPath}}">
          {{!-- <p class="card-text">{{restaurant.description}}</p> --}}
          <p class="login-text"><a class="btn btn-primary text-uppercase" href="/profile-update/{{user._id}}">Update my profile</a></p>
        </div>
      </div>
      <p><a class="btn btn-primary text-uppercase" href="/logout">Logout</a></p>
		</div>
      <div class="col-md-6">
        <h1>My Comments:</h1>
        <h4>{{restaurant.name}}</h4>
        {{#each comment}}
        
        <div class="card row">
          <h5 class="card-header">{{this.title}}</h5>
          
          <div class="card-body">
            <p class="card-text">{{this.content}}</p>
          </div>
          <div class="card-footer">
            <p><a href="/edit-comment/{{this._id}}">Edit</a> | <a href="/del-comment/{{this._id}}">Delete</a></p>
          </div>
        </div>
        {{/each}}
      </div>
	</div>
	<div class="row">
		<div class="col-md-12">
		</div>
	</div>
</div>
</div>


